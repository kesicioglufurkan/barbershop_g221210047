@model barbershop_g221210047.Models.Appointment

<h2>Randevu Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Kullanıcı</label>
        <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewData["Users"] as List<barbershop_g221210047.Models.User>, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>İşlem</label>
        <select asp-for="ServiceId" class="form-control" asp-items="@(new SelectList(ViewData["Services"] as List<barbershop_g221210047.Models.Service>, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>Çalışan</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(ViewData["Employees"] as List<barbershop_g221210047.Models.Employee>, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Saat</label>
        <input asp-for="Time" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label>Durum</label>
        <input asp-for="Status" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

